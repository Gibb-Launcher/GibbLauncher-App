<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gibblauncher.gibblauncherapp.controller.SelectTrainingFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/trainingTitleSelectTrainingFragment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:drawablePadding="10dp"
                android:hint="Título" />
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/checkboxSelectTrainingFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Treino Aleatório"
            android:textAlignment="viewEnd"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:layout_marginTop="10dp"/>

        <Spinner
            android:id="@+id/spinnerTrainingOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/shot_arrays"
            android:prompt="@string/shot_prompt"
            android:layout_margin="10dp"/>


        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/buttonSaveTrainingSelectFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Salvar" />

        <Spinner
            android:id="@+id/spinnerTrainingTwo"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/shot_arrays"
            android:prompt="@string/shot_prompt"
            android:layout_margin="10dp"/>

        <Spinner
            android:id="@+id/spinnerTrainingThree"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/shot_arrays"
            android:prompt="@string/shot_prompt"
            android:layout_margin="10dp"/>

        <Spinner
            android:id="@+id/spinnerTrainingFour"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/shot_arrays"
            android:prompt="@string/shot_prompt"
            android:layout_margin="10dp"/>

        <Spinner
            android:id="@+id/spinnerTrainingFive"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/shot_arrays"
            android:prompt="@string/shot_prompt"
            android:layout_margin="10dp"/>

        <Spinner
            android:id="@+id/spinnerTrainingSix"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/shot_arrays"
            android:prompt="@string/shot_prompt"
            android:layout_margin="10dp"/>

        <Spinner
            android:id="@+id/spinnerTrainingSeven"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/shot_arrays"
            android:prompt="@string/shot_prompt"
            android:layout_margin="10dp"/>

        <Spinner
            android:id="@+id/spinnerTrainingEight"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/shot_arrays"
            android:prompt="@string/shot_prompt"
            android:layout_margin="10dp"/>

        <Spinner
            android:id="@+id/spinnerTrainingNine"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/shot_arrays"
            android:prompt="@string/shot_prompt"
            android:layout_margin="10dp"/>

        <Spinner
            android:id="@+id/spinnerTrainingTen"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/shot_arrays"
            android:prompt="@string/shot_prompt"
            android:layout_margin="10dp"/>
    </LinearLayout>
</ScrollView>
